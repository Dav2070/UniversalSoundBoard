<Page
    x:Class="UniversalSoundBoard.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalSoundBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:UniversalSoundBoard.Model"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="NavBarItemIconStyle">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
            <Setter Property="FontSize" Value="30" />
            <Setter Property="Margin" Value="-4,0,0,0" />
        </Style>
        <Style TargetType="TextBlock" x:Key="NavBarItemTextStyle">
            <Setter Property="Margin" Value="20,0,0,0" />
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0">
            <Button Name="HamburgerButton" 
                    RelativePanel.AlignLeftWithPanel="True" 
                    Height="45" Width="45" 
                    FontFamily="Segoe MDL2 Assets" Content="&#xE700;" FontSize="20" Background="{ThemeResource SystemControlBackgroundAccentBrush}" Foreground="White"
                    Click="HamburgerButton_Click"/>
            <Button Name="BackButton" 
                    RelativePanel.RightOf="HamburgerButton"
                    Height="45" Width="65"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE0A6;" FontSize="20" Background="White"
                    Click="BackButton_Click"/>
            <Button Name="AddButton" 
                    RelativePanel.LeftOf="SearchAutoSuggestBox" RelativePanel.AlignVerticalCenterWithPanel="True" 
                    Margin="0,0,20,0" Height="45" Width="45"
                    FontFamily="Segoe MDL2 Assets" Content="&#xE109;">
                <Button.Flyout>
                    <MenuFlyout Placement="Bottom">
                        <MenuFlyoutItem Name="NewSoundFlyoutItem" Text="New Sound" Click="NewSoundFlyoutItem_Click" />
                        <MenuFlyoutItem Name="NewCategoryFlyoutItem" Text="New Category" Click="NewCategoryFlyoutItem_Click" />
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
            <AutoSuggestBox Name="SearchAutoSuggestBox" 
                            RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"
                            PlaceholderText="Search for sounds" QueryIcon="Find" 
                            Margin="0,0,10,0" Width="200"
                            TextChanged="SearchAutoSuggestBox_TextChanged" QuerySubmitted="SearchAutoSuggestBox_QuerySubmitted"/>
        </RelativePanel>

        <SplitView Name="SideBar" DisplayMode="CompactOverlay"
                   CompactPaneLength="45" OpenPaneLength="200"
                   Grid.Row="1">
            <SplitView.Pane>

                <ListBox SelectionMode="Single" Name="HamburgerListBox" SelectionChanged="IconsListBox_SelectionChanged"
                          Background="#666666" Foreground="White">
                    <ListBoxItem Name="HomeListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE10F;" Style="{StaticResource NavBarItemIconStyle}" />
                            <TextBlock Text="Home" Style="{StaticResource NavBarItemTextStyle}" />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem Name="FoodListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE1CE;" Style="{StaticResource NavBarItemIconStyle}" />
                            <TextBlock Text="Food" Style="{StaticResource NavBarItemTextStyle}" />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Margin="20,20,0,0" x:Name="ContentRoot">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <MediaElement Name="MyMediaElement" AutoPlay="True" Source="{Binding mediaElementSource, Mode=TwoWay}"/>

                    <TextBlock Name="Title" Text="{Binding title, Mode=TwoWay}" FontSize="24" />

                    <GridView Name="SoundGridView" Grid.Row="1" SelectionMode="None"
                              IsItemClickEnabled="True" ItemClick="SoundGridView_ItemClick"
                              AllowDrop="True" Drop="SoundGridView_Drop" DragOver="SoundGridView_DragOver" ItemsSource="{Binding sounds, Mode=TwoWay}">
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="data:Sound">
                                <local:SoundTileTemplate HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <ProgressRing Name="ProgressRing"                 
                      Grid.Row="8" 
                      Grid.Column="1"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Width="50" 
                      Height="50" 
                      IsActive="{Binding progressRingIsActive, Mode=TwoWay}" />
                </Grid>
            </SplitView.Content>
        </SplitView>

        <!--
                        <ContentDialog x:Name="NewCategoryContentDialog"
                        Title="New Category"
                        VerticalAlignment="Stretch"
                        MaxWidth="200" Visibility="Collapsed"
                        PrimaryButtonText="Create"
                        PrimaryButtonClick="NewCategoryContentDialog_PrimaryButtonClick"
                        SecondaryButtonText="Cancel">
                            <StackPanel>
                                <TextBox Name="NewCategoryContentDialogTextBox" TextChanged="NewCategoryContentDialogTextBox_TextChanged" />
                            </StackPanel>
                        </ContentDialog>-->
    </Grid>
</Page>
